<div class="section projects" id="projects-section">
  <% @projects.each do |p|%>
      <div class="project">
        <div class="project-image">
          <img class="image" src="<%= p.coverimage%>">
        </div>
        <div class="project-description">
            <div class="project-title"><%= p.title %></div>
            <div class="project-category">
              <%= raw(p.projectdate) %>
            </div>
            <div class="brief-description">
              <%= p.role %>
            </div>
            <% if p.password.present? %>
              <div class="lock-password-field" id="lockpasswordfield">
                <input type="password" name="password" class="inputField1" id="password" placeholder="Please enter password here" required/>
                <div class="content-open-btn" id="button1" onclick="onSubmit('<%= p.title %>')">Read Details</div>
              </div>
            <% elsif %>
              <div class="project-link">
                  <%= link_to project_path(p.title), class:"view-more-btn center" do %>Read Details<% end %>
              </div>
            <% end%>
        </div>
      </div>
  <% end %>
