  <hr/>
  <div class="top-greeting m-b-50">Projects</div>
  <div class="w-900 center">
    <% @projects.each do |p| %>
      <%= link_to project_path(p.title) do %>
        <div class="box-30" style="background-image: url('<%= p.coverimage %>')"></div>
      <% end %>
    <% end %>
  </div>
  <br/>
  <%= link_to all_projects_path, class:"view-more-btn center" do %>View More<% end %>
</div>
