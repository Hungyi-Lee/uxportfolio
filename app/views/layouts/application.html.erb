<!DOCTYPE html>
<html>
  <head>
    <title>Hungyi's Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Playfair+Display|Raleway&display=swap' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.png')%>
  </head>

  <body>
    <!-- top-nav -->
    <div class="header">
      <div class="header-content">
        <%= link_to root_path do %>
          <div id="logo">Hungyi Lee</div>
        <% end %>
        <div id="navToggle">
          <div>
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
        <nav>
          <ul class="nav-list">
            <% if current_page?(controller: 'home', action: 'index') %>
              <li class="active"><%= link_to root_path do %>HOME<% end %></li>
            <% else %>
              <li class="nav-list-item"><%= link_to root_path do %>HOME<% end %></li>
            <% end %>
            <% if current_page?(controller: 'works', action: 'index') %>
              <li class="active"><%= link_to about_path do %>ABOUT<% end %></li>
            <% else %>
              <li class="nav-list-item"><%= link_to about_path do %>ABOUT<% end %></li>
            <% end %>
            <% if current_page?(controller: 'projects', action: 'index') %>
              <li class="active"><%= link_to all_projects_path do %>PROJECTS<% end %></li>
            <% else %>
              <li class="nav-list-item"><%= link_to all_projects_path do %>PROJECTS<% end %></li>
            <% end %>
            <li class="nav-list-item"><%= mail_to "horngyi6527@gmail.com" do %>CONTACT<% end %></li>
          </ul>
        </nav>
      </div>
    </div>
    <%= yield %>
    <!-- Go to top -->
    <div onclick="topFunction()" id="myBtn" class="bottom-menu pull-right">
      <span>&#8593;</span>
    </div>
  </body>
</html>
