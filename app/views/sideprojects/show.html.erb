<div class="section m-t-70">
  <div class="breadcrumb">
    <span class="breadcrumb-home"><%= link_to root_path do%>Home<%end%></span>
    <span>/</span>
    <span class="breadcrumb-home"><%= link_to sideprojects_path do%>Blog<%end%></span>
    <span>/</span>
    <% if @sideproject.tag == 'Lab'%>
    <span class="breadcrumb-home"><%= link_to blog_labs_path do%>Lab<%end%></span>
    <% elsif @sideproject.tag == 'Work Notes' %>
    <span class="breadcrumb-home"><%=link_to blog_worknotes_path do %>Work Notes<% end %></span>
    <% elsif @sideproject.tag == 'Skillshare' %>
    <span class="breadcrumb-home"><%=link_to blog_skillshares_path do %>Skillshare<% end %></span>
    <% elsif @sideproject.tag == 'Recommendations' %>
    <div class="breadcrumb-home"><%= link_to blog_recommendations_path do%>Recommendations<% end %></div>
    <% end %>
    <span>/</span>
    <span class="breadcrumb-active breadcrumb-title"><%= @sideproject.title %></span>
  </div>
  <div class="blog-show-section">
    <div class="project-detailed-content">
      <div class="project-content-title"><%= @sideproject.title %></div>
      <div class="post-tag"><%=@sideproject.tag%>ãƒ»<%= @sideproject.projectdate %></div>
    </div>
  </div>
  <div class="blog-show-section2">
    <div class="project-detailed-content">
        <%= raw(@sideproject.description) %>
        <hr/>
    </div>
  </div>
  <div class="blog-show-section">
    <!-- Related posts -->
    <br/><h4>More Posts</h4><br/>
    <ul>
      <% @sideprojects.sample(4).each do |s|%>
       <li><b>
         <%= link_to sideproject_path(s.title) do %><%= s.title %><% end %>
       </b></li>
      <% end %>
    </ul>
  </div>
  <div class="bk-pj-btn">
    <%= link_to sideprojects_path do %>BACK TO BLOG<% end %>
  </div>
</div>
